<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="col-lg-4 col-md-8 col-sm-8 col-12">
    <h1>New game</h1>

      <ul class="list-unstyled d-flex flex-wrap">
        <% @letters.each do |letter| %>
          <li class="px-3 py-1"><%= letter %></li>
        <% end %>
      </ul>

    <p class="form-prefix">What is the longest word you can find?</p>

    <form action="/score" method="POST" data-turbo="false" class="d-flex flex-column">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class="input-group">
        <input type="text" name="word" class="form-control">
        <input type="submit" value="Play" class="btn btn-primary">
      </div>
    </form>
  </div>
</div>
